        <div class="row row-content" id="reservation-form">
            <div class="col-12 col-sm-8 offset-sm-2 ">
                <div class="card">
                    <h3 class="card-header text-white" style="background-color: #F0B74E;">
                        Reserve a Table
                    </h3>
                    <form>
                        <div class="mt-3 form-group row ml-1">
                            <label for="guests" class="col-12 col-sm-2 col-form-label"> Number of Guests</label>
                            <div class="col-10 col-sm-6">
                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;1
                                    &nbsp;&nbsp;</label>


                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;2 &nbsp;&nbsp;
                                </label>


                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;3 &nbsp;&nbsp;
                                </label>


                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;4 &nbsp;&nbsp;
                                </label>


                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;5 &nbsp;&nbsp;
                                </label>


                                <label class="radio-inline"><input type="radio" name="optradio">&nbsp;6 &nbsp;&nbsp;
                                </label>

                            </div>

